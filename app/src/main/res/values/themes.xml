<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyBook" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.MyBook" parent="Base.Theme.MyBook" />

    <style name="ModernProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/blue_4</item>
        <item name="android:indeterminateTintMode">src_atop</item>
        <!-- Add more customizations as needed -->
    </style>

    <!-- Custom BottomNavigationView style -->
    <style name="CustomBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <!-- Customize attributes as needed -->
        <item name="itemTextAppearanceActive">@style/CustomBottomNavItemTextActive</item>
        <item name="itemTextAppearanceInactive">@style/CustomBottomNavItemTextInactive</item>
        <item name="itemIconSize">32dp</item>
        <item name="itemTextColor">@color/grey</item>
        <item name="itemBackground">@color/white</item>
    </style>

    <!-- Style for active item text -->
    <style name="CustomBottomNavItemTextActive" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textColor">@color/blue</item>
    </style>

    <!-- Style for inactive item text -->
    <style name="CustomBottomNavItemTextInactive" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/grey</item>
    </style>
</resources>